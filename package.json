{
  "name": "did-resolver",
  "version": "0.0.6",
  "description": "Resolve DID documents",
  "main": "lib/resolver.js",
  "types": "lib/resolver.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/uport-project/did-resolver.git"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "author": "Pelle Braendgaard <pelle.braendgaard@consensys.net>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "dev": "tsc --watch",
    "format": "prettier --write src/**/*"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^10.12.18",
    "jest": "^24.5.0",
    "prettier": "^1.16.4",
    "regenerator-runtime": "^0.12.1",
    "ts-jest": "^24.0.1",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ]
  }
}
